<div class="container">
  <div>
    <%= link_to '全て', questions_path %>
    <%= link_to '未解決', unsolved_questions_path %>
    <%= link_to '解決', solved_questions_path %>
  </div>
  <%= search_form_for @q, url: request.path do |f| %>

    <%= f.label :title_or_body_cont %>
    <%= f.search_field :title_or_body_or_answers_body_cont, class: 'form-control' %>
  
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <ul>
  <% @questions.each do |question| %>
    <li>
      <%= link_to question.title, question_path(question) %>
      <% if current_user.present? %>
        <% if question.user_id == current_user.id %>
          <%= link_to '編集', edit_question_path(question), class: 'btn btn-success' %>
          <%= link_to '削除', question_path(question), class: 'btn btn-danger',
              data: { confirm: '削除しますか' }, method: :delete %>
        <% end %>
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
