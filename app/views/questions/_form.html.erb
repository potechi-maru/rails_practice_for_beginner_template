  <%= form_with(model: question) do |f| %>
    <div class='form_group'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    
    <div class='form_group'>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 10 %>
    </div>
    
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
